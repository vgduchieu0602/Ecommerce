        animation: containerFadeIn 1.2s ease-out;
      }

      @keyframes containerFadeIn {
        from {
          opacity: 0;
          transform: scale(0.95);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }

      .header {
        background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
